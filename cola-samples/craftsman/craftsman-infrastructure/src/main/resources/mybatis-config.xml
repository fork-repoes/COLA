<?xml version="1.0" encoding="UTF-8" ?>
<!-- mybatis的配置文件 -->
<!DOCTYPE configuration
    PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 开启驼峰映射 ，否则查询结果不能转成resultType-->
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <!--项目DataObject对应的包名-->
        <package name="io.github.alice52.craftsman.metrics.entity"/>
        <package name="io.github.alice52.craftsman.userprofile.entity"/>
    </typeAliases>
    <mappers>
        <mapper resource="mapper/MetricMapper.xml"/>
        <mapper resource="mapper/UserProfileMapper.xml"/>
    </mappers>
</configuration>
